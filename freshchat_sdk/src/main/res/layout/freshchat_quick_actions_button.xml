<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/freshchat_quick_action_button_parent_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">
<com.google.android.material.card.MaterialCardView
    android:id="@+id/freshchat_quick_action_button"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/freshchat_quick_actions_button_border"
    app:cardBackgroundColor="@color/freshchat_quick_actions_button_background"
    app:cardElevation="0dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginEnd="6dp"
    android:focusable="true">
<TextView
    android:id = "@+id/quick_action_button_text"
    style="@style/Widget.Freshchat.QuickActions.ButtonsTextStyle"
    android:gravity="center"
    android:layout_gravity="center"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp"
    android:paddingRight="16dp"
    android:paddingEnd="16dp"
    android:textAlignment="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

</com.google.android.material.card.MaterialCardView>
</FrameLayout>